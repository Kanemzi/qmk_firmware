// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": false,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/.build": true,
		"**/*.hex": true,
		"**/*.bin": true,
		"**/*.uf2": true,
		"[!k]*/**": true,
		"k[!e]*/**": true,
		"ke[!y]*/**": true,
		"key[!b]*/**": true,
		"keyb[!o]*/**": true,
		"keybo[!a]*/**": true,
		"keyboa[!r]*/**": true,
		"keyboar[!d]*/**": true,
		"keyboard[!s]*/**": true,
		"keyboards/[!p]*/**": true,
		"keyboards/p[!l]*/**": true,
		"keyboards/pl[!a]*/**": true,
		"keyboards/pla[!n]*/**": true,
		"keyboards/plan[!c]*/**": true,
		"keyboards/planc[!k]*/**": true,
		"keyboards/planck/[!k]*/**": true,
		"keyboards/planck/k[!e]*/**": true,
		"keyboards/planck/ke[!y]*/**": true,
		"keyboards/planck/key[!m]*/**": true,
		"keyboards/planck/keym[!a]*/**": true,
		"keyboards/planck/keyma[!p]*/**": true,
		"keyboards/planck/keymap[!s]*/**": true,
		"keyboards/planck/keymaps/[!k]*/**": true,
		"keyboards/planck/keymaps/k[!a]*/**": true,
		"keyboards/planck/keymaps/ka[!n]*/**": true,
		"keyboards/planck/keymaps/kan[!e]*/**": true,
		"keyboards/planck/keymaps/kane[!m]*/**": true,
		"keyboards/planck/keymaps/kanem[!z]*/**": true,
		"keyboards/planck/keymaps/kanemz[!i]*/**": true
	},
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
	    "editor.formatOnSave": false
    },
    "terminal.integrated.profiles.windows": {
        "QMK_MSYS": {
            "path": "D:/Dev/Keyboard/QMK_MSYS/usr/bin/bash.exe",
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1"
            },
            "args": ["--login"]
        }
    },

    "terminal.integrated.cursorStyle": "line",
    "cmake.configureOnOpen": false,

